{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "prettier",
    "prettier/standard"
  ],
  "plugins": [
    "prettier"
  ],
  "env": {
    "browser" : true,
    "jquery": true
  },
  "globals": {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false,
    "__STAGE__"    : false,
    "__COVERAGE__" : false
  },
  "rules": {
    "jsx-a11y/label-has-for": 0,
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "import/no-unresolved": [2, {"commonjs": true, "amd": true}],
    "import/named": 2,
    "import/namespace": 2,
    "import/default": 2,
    "import/export": 2,
    "no-nested-ternary": 0,
    "import/no-named-as-default": 0,
    "prefer-reflect": 0,
    "no-var": 2,
    "semi": ["error", "always"],
    "no-mixed-operators": 2,
    "eqeqeq": ["error", "always"]
    /*"prettier/prettier": ["error", {
      "singleQuote": true,
      "parser": "babel-eslint",
      "trailingComma": "all",
      "printWidth": 80
    }]*/
  }
}
